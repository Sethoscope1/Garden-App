<section class="content group">

  <section class="content-main">

    <form action="/gardens" method="POST">

      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

      <label>Name
        <input type="text" name="garden[name]">
      </label>

      <br>

      <label>Location
        <input type="text" name="garden[location]">
      </label>

      <br>

      <label class="optional">Zip Code
        <input type="integer" name="garden[zip]" value="<%= current_user.zip if current_user.zip %>" class="optional">
      </label>

      <br>

      <p><input type="submit" value="Start a New Garden"></p>
    </form>

  </section>

</section>