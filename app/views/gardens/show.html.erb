  <%= render partial: "garden_info", locals: {garden: @garden} %>

  <ul class="lists list-sortable left">

    <%= render partial: "lists/list", collection: @garden.lists.sort_by { |a| a.list_pos } %>

  </ul>

  <%= render partial: "lists/list_list_form" %>

</section>

