<h2>DUE DATE</h2>

<% if @note.due_date %>

		<i class="icon-calendar left"></i>
  	<p class="sub icon left"><%= format_date(@note.due_date) %></p>


  <form action="<%= note_url(params[:id]) %>" method="POST" class="due-date">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden" name="note[due_date]" value="nil" id="some_name">
    <input type="submit" value="Did it!" class="right" id="due-done">
  </form>

<% else %>

  <form action="<%= note_url(params[:id]) %>" method="POST" class="due-date">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="PUT">
    <input type="date" name="note[due_date]">
    <input type="submit" value="Due Date" class="right" id="due-date">
  </form>
<% end %>