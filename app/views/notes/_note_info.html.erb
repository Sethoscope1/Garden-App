<section class="data">

  <div class="ribbons group right">
    <% if note.flag1 %>
    <div class="ribbon one"></div>
    <% end %>

    <% if note.flag2 %>
    <div class="ribbon two"></div>
    <% end %>

    <% if note.flag3 %>
    <div class="ribbon three"></div>
    <% end %>

    <% if note.flag4 %>
    <div class="ribbon four"></div>
    <% end %>

    <% if note.flag5 %>
    <div class="ribbon five"></div>
    <% end %>
  </div>

  <h1><%= note.crop_id %><h1>

  <% if note.crop_id %>

    <%= render "/crops/crop_info", crop: Crop.find(note.crop) %>

  <% else %>

    <h3><%= note.title %></h3>

    <% if note.note_photo_file_name %>

      <%= image_tag note.note_photo.url(:small) %>

    <% end %>

  <% end %>

  <%= render partial: "notes/note_icons", locals: {note: note} %>
  <nav class="view-buttons group">
    <span class="right">
      <%= button_to "View!", note_url(note), method: :get %>
    </span>
  </nav>

  <br>

</section>

<br>
