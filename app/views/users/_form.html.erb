<form action="<%= action %>" method="post">
  <input
     name="_method"
     type="hidden"
     value="<%= method %>">
  <input
     name="authenticity_token"
     type="hidden"
     value="<%= form_authenticity_token %>">

  <label for="user_username">Username</label>
  <input
     id="user_username"
     name="user[username]"
     type="text">
  <br>

  <label for="user_username">Email</label>
  <input
     id="user_username"
     name="user[email]"
     type="text">
  <br>

  <label for="user_username">Zip Code</label>
  <input
     id="user_username"
     name="user[zip]"
     type="integer"
     placeholder="ZIP - OPTIONAL"
  <br>

  <label for="user_password">Password</label>
  <input
     id="user_password"
     name="user[password]"
     type="password">
  <br>

  <input type="submit" value="<%= message %>">
</form>
